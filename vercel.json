{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "max-age=900"
        }
      ]
    },
    {
      "source": "/images/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "max-age=86400"
        }
      ]
    }
  ],
  "redirects": [
    {
      "source": "/post/:path(.*)",
      "destination": "/posts/:path",
      "permanent": true
    },
    {
      "source": "/(archive\\/?.*)",
      "destination": "/posts",
      "permanent": true
    },
    {
      "source": "/(about\\/?.*)",
      "destination": "/",
      "permanent": true
    }
  ]
}
