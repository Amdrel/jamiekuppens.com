---
import { Image } from "astro:assets";

export type NavigationProps = {
  links: {
    iconUrl: string;
    url: string;
    label: string;
  }[];
};

const { links } = Astro.props as NavigationProps;
---

<ul class="flex gap-3">
  {
    links.map((link) => (
      <li>
        <a href={link.url} target="_blank" rel="noopener">
          <Image
            class="h-6 w-6 invert"
            src={link.iconUrl}
            alt={link.label}
            width="24"
            height="24"
            title={link.label}
            loading="eager"
          />
        </a>
      </li>
    ))
  }
</ul>

