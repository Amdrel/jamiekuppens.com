---
import { Image } from "astro:assets";

export type NavigationProps = {
  links: {
    url: string;
    label: string;
  }[];
};

const { links } = Astro.props as NavigationProps;
---

<nav>
  <a class="mb-6 flex items-center gap-3.5" href="/">
    <Image
      class="h-8 w-8 rounded-full xs:h-12 xs:w-12"
      src="/images/me.webp"
      alt=""
      width="48"
      height="48"
    />
    <h1 class="my-0 text-3xl text-gray-300 xs:text-4xl">Jamie Kuppens</h1>
  </a>

  <ul>
    {
      links.map((link) => (
        <li>
          <a
            class="flex items-center gap-2 py-2 text-lg text-gray-300 before:inline-block before:h-0.5 before:w-6 before:bg-gray-300 before:content-[''] hover:text-gray-50 hover:before:bg-gray-50"
            href={link.url}
          >
            {link.label}
          </a>
        </li>
      ))
    }
  </ul>
</nav>
