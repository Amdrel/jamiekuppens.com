---
import TagList from "./tag-list.astro";
import { formatDate } from "../lib/date";

export type PostCardProps = {
  title: string;
  url: string;
  description: string;
  date: string;
  tags: string[];
  external: boolean;
};

const { title, url, description, date, tags, external } =
  Astro.props as PostCardProps;
---

<article class="rounded-2xl bg-gray-950 xl:max-w-[22rem]">
  <a
    class="svg-right-nudge text-gray-300 hover:text-blue-300 focus:text-blue-300"
    href={url}
  >
    <div class="flex h-full flex-col p-4">
      <strong class="text-xl text-blue-200">{title}</strong>
      <p class="my-1 text-gray-300">
        {formatDate(date)}
      </p>
      <div class="mt-1">
        <TagList tags={tags} nonInteractive={true} />
      </div>
      <p class="max-h-48 truncate whitespace-normal text-base">{description}</p>
      <p class="mb-0 mt-auto self-end text-blue-300">
        <span class="inline-block h-8">Read More</span>
        {
          external ? (
            <svg
              class="-mt-0.5 inline-block size-4 h-8 fill-blue-300"
              focusable="false"
              aria-hidden="true"
              viewBox="0 0 24 24"
            >
              <path d="M19 19H5V5h7V3H5c-1.11 0-2 .9-2 2v14c0 1.1.89 2 2 2h14c1.1 0 2-.9 2-2v-7h-2zM14 3v2h3.59l-9.83 9.83 1.41 1.41L19 6.41V10h2V3z" />
            </svg>
          ) : (
            <svg
              class="arrow -mt-0.5 inline-block size-4 h-8 fill-blue-300"
              focusable="false"
              aria-hidden="true"
              viewBox="0 0 24 24"
            >
              <path d="M6.23 20.23 8 22l10-10L8 2 6.23 3.77 14.46 12z" />
            </svg>
          )
        }
      </p>
    </div>
  </a>
</article>
