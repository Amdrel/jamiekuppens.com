---
import PostList from "../../components/post-list.astro";
import BaseLayout from "../../layouts/base-layout.astro";
import type { PostLayoutProps } from "../../layouts/post-layout.astro";
import { getTagName } from "../../lib/tags";

export async function getStaticPaths() {
  const posts: PostLayoutProps[] = Object.values(
    import.meta.glob("../posts/*.mdx", { eager: true }),
  );
  const uniqueTags = [
    ...new Set(posts.map((post) => post.frontmatter.tags).flat()),
  ];

  return uniqueTags.map((tag) => {
    const filteredPosts = posts.filter((post) =>
      post.frontmatter.tags.includes(tag),
    );

    return {
      params: { tag },
      props: {
        frontmatter: {
          title: tag,
          description: "",
        },
        posts: filteredPosts,
      },
    };
  });
}

const { tag } = Astro.params;
const { posts, frontmatter } = Astro.props;

const prettyTagName =
  getTagName(tag) ??
  tag
    .replaceAll("-", " ")
    .split(" ")
    .map((word) => word.charAt(0).toLocaleUpperCase() + word.slice(1))
    .join(" ");

frontmatter.title = prettyTagName;
---

<BaseLayout {...Astro.props}>
  <h1>{prettyTagName}</h1>

  <PostList posts={posts} />
</BaseLayout>
